{
  "name": "the-simple-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.(js|js|tsx)\"",
    "format": "prettier \"src/**/*.*(js|js|tsx)\" --write"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.3",
    "next": "10.1.3",
    "next-auth": "^3.14.6",
    "next-connect": "^0.10.1",
    "next-images": "^1.7.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "react-particles-js": "^3.4.1",
    "react-scroll": "^1.8.2",
    "styled-components": "^5.2.3",
    "styled-reset": "^4.3.4",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts, js, jsx, tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  }
}
